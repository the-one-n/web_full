{{ header }}
<main>
  <div id="account-newsletter" class="container">
      <div id="content" class="{{ class }}">{{ content_top }}
        <h1 class="auth__heading mb-5">{{ heading_title }}</h1>
        <form action="{{ action }}" method="post" enctype="multipart/form-data" class="form-horizontal auth">
          <fieldset>
              <label class="col-sm-2 control-label newsletter-entry">{{ entry_newsletter }}</label>
              <div class="col-sm-10">
                {% if newsletter %}
                  <div class="form-group d-flex justify-content-start">
                    <label class="radio-inline newsletter-label" for="newsletter-yes">{{ text_yes }} </label>
                    <input type="radio" id="newsletter-yes" class="form-control newsletter-input" name="newsletter" value="1" checked="checked" />
                  </div>
                    <div class="form-group d-flex justify-content-start">
                      <label class="radio-inline newsletter-label" for="newsletter-no"> {{ text_no }}</label>
                      <input type="radio" id="newsletter-no" class="form-control newsletter-input" name="newsletter" value="0" />
                    </div>
                {% else %}
                  <div class="form-group d-flex justify-content-start">
                    <label class="radio-inline newsletter-label" for="newsletter-yes">{{ text_yes }} </label>
                    <input type="radio" id="newsletter-yes" class="form-control newsletter-input" name="newsletter" value="1" />
                  </div>
                  <div class="form-group d-flex justify-content-start">
                    <label class="radio-inline newsletter-label" for="newsletter-no">{{ text_no }}</label>
                    <input type="radio" id="newsletter-no" class="form-control newsletter-input" name="newsletter" value="0" checked="checked" />
                  </div>
                {% endif %}
              </div>
          </fieldset>
          <div class="buttons clearfix">
            <div class="pull-left"><a href="{{ back }}" class="button">{{ button_back }}</a></div>
            <div class="pull-right">
              <input type="submit" value="{{ button_continue }}" class="button" />
            </div>
          </div>
        </form>
      </div>
  </div>
</main>
{{ footer }}